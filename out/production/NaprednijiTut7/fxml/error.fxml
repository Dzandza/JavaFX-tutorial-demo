<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10">

    <columnConstraints>
        <ColumnConstraints percentWidth="10"/>
        <ColumnConstraints percentWidth="80"/>
        <ColumnConstraints percentWidth="10"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="50"/>
        <RowConstraints percentHeight="50"/>
    </rowConstraints>

    <children>
        <Text fx:id="errorText" GridPane.columnIndex="1" GridPane.rowIndex="0" textAlignment="CENTER"></Text>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER" onAction="#closeWindow">OK</Button>
    </children>

</GridPane>
